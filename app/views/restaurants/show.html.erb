<div class="container">
  <h1><%= @restaurant.name %></h1>
  <h3>Details</h3>
  <p>Address: <%= @restaurant.address %></p>
  <p>Category : <%= @restaurant.category.capitalize %></p>

  <h3>Reviews</h3>
  <p>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.content %> - <%= review.rating %></li>
      <% end %>
    </ul>
  </p>

  <%= link_to "Ajouter une review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>

  <%= link_to "retour a la liste", restaurants_path, class: 'btn btn-primary' %>

  <%= render 'reviews/form' %>
</div>

